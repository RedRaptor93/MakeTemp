{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/tools/build.ps1"
            },
            "linux": {
                "command": "${workspaceFolder}/tools/build.py"
            }, 
            "args": [
                "-m", "Debug"
            ], 
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/tools/build.ps1"
            },
            "linux": {
                "command": "python3 ${workspaceFolder}/tools/build.py"
            },
            "args": [
              "-m", "Release"  
            ]
        }
    ]
}