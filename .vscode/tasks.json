{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "powershell",
            "args": [ "${workspaceFolder}/tools/build.ps1", "-m", "Debug" ], 
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "powershell",
            "args": [ "${workspaceFolder}/tools/build.ps1", "-m", "Release" ],
            "problemMatcher": "$gcc"
        }
    ]
}